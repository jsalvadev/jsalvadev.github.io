---
interface Props {
  title: string;
  description: string;
  date: string;
  url: string;
}

const { title, description, date, url } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="block mt-5 no-underline hover:scale-[1.01] transition-all duration-300"
>
  <article
    class="bg-gray-100 dark:bg-gray-900/60 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 max-w-[70ch] w-full border border-gray-300 dark:border-gray-800/40"
  >
    <div class="flex flex-col justify-between p-3">
      <div>
        <h3 class="mb-1 text-base font-semibold text-gray-900 dark:text-slate-50 text-pretty">{title}</h3>
        <p class="text-sm leading-relaxed text-gray-700 dark:text-gray-300 line-clamp-2 text-pretty">{description}</p>
      </div>
      <p class="mt-2 text-xs text-gray-600 dark:text-gray-400">{date}</p>
    </div>
  </article>
</a>
