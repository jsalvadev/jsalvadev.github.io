---
interface Props {
  title: string;
  description: string;
  date: string;
  url: string;
}

const { title, description, date, url } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="block mt-5 no-underline hover:scale-[1.01] transition-all duration-300"
>
  <article
    class="bg-light-bg-surface dark:bg-dark-bg-surface rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 max-w-[70ch] w-full border border-light-border-subtle dark:border-dark-border-subtle"
  >
    <div class="flex flex-col justify-between p-3">
      <div>
        <h3 class="mb-1 text-body-md font-semibold text-light-text-primary dark:text-dark-text-primary text-pretty">{title}</h3>
        <p class="text-body-sm leading-relaxed text-light-text-secondary dark:text-dark-text-secondary line-clamp-2 text-pretty">{description}</p>
      </div>
      <p class="mt-2 text-body-sm text-light-text-secondary dark:text-dark-text-secondary">{date}</p>
    </div>
  </article>
</a>
