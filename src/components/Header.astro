---
const NAV_ITEMS = [
  {
    title: 'Experience',
    label: 'experience',
    url: '/#experience'
  },
  {
    title: 'Projects',
    label: 'projects',
    url: '/#projects'
  },
  {
    title: 'About me',
    label: 'about-me',
    url: '/#about-me'
  },
  {
    title: 'Contact',
    label: 'contact',
    url: 'mailto:salvadorjesus.freelance@gmail.com'
  }
];
---

<header class="mt-4">
  <nav class="flex justify-center">
    <div class="w-2/5 flex justify-between">
      {
        NAV_ITEMS.map(item => (
          <a
            href={item.url}
            class="nav-link"
            aria-label={item.label}
          >
            {item.title}
          </a>
        ))
      }
    </div>
  </nav>
</header>

<style>
  .nav-link {
    @apply text-gray-300 hover:text-teal-400 transition-all duration-300 font-medium relative after:content-[''] after:absolute after:w-0 after:h-[2px] after:left-0 after:bottom-0 after:bg-teal-400 after:transition-all after:duration-300 hover:after:w-full;
  }
</style>
