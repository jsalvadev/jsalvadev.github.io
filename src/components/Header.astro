---
import ThemeToggle from '@/components/ThemeToggle.astro';

const NAV_ITEMS = [
  {
    title: 'Experience',
    label: 'experience',
    url: '/#experience'
  },
  {
    title: 'Projects',
    label: 'projects',
    url: '/#projects'
  },
  {
    title: 'Articles',
    label: 'articles',
    url: '/#articles'
  },
  {
    title: 'About me',
    label: 'about-me',
    url: '/#about-me'
  },
  {
    title: 'CV',
    label: 'cv',
    url: '/SalvadorJesus_CV.pdf'
  }
  // {
  //   title: 'Contact',
  //   label: 'contact',
  //   url: 'mailto:salvadorjesus.freelance@gmail.com'
  // }
];
---

<header class="mt-4">
  <nav class="flex justify-center">
    <div
      class="fixed top-0 z-50 flex justify-between items-center w-full px-6 py-3 sm:w-4/5 md:w-2/3 lg:w-1/3 bg-white/50 dark:bg-slate-950/50 backdrop-blur-sm border-b border-gray-200 dark:border-slate-800"
    >
      <div class="flex gap-4 items-center">
        {
          NAV_ITEMS.map(item =>
            item.label === 'cv' ? (
              <a
                href={item.url}
                class="nav-link"
                aria-label={item.label}
                target="_blank"
                rel="noopener noreferrer"
              >
                {item.title}
              </a>
            ) : (
              <a
                href={item.url}
                class="nav-link"
                aria-label={item.label}
              >
                {item.title}
              </a>
            )
          )
        }
      </div>
      <ThemeToggle />
    </div>
  </nav>
</header>

<style>
  .nav-link {
    @apply text-gray-700 dark:text-gray-300 hover:text-teal-500 dark:hover:text-teal-400 transition-all duration-300 font-medium relative after:content-[''] after:absolute after:w-0 after:h-[2px] after:left-0 after:bottom-0 after:bg-teal-500 dark:after:bg-teal-400 after:transition-all after:duration-300 hover:after:w-full text-sm;
  }
</style>
