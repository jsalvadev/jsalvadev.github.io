---
import ThemeToggle from '@/components/ThemeToggle.astro';

const NAV_ITEMS = [
  {
    title: 'Experience',
    label: 'experience',
    url: '/#experience'
  },
  {
    title: 'Projects',
    label: 'projects',
    url: '/#projects'
  },
  {
    title: 'Articles',
    label: 'articles',
    url: '/#articles'
  },
  {
    title: 'About me',
    label: 'about-me',
    url: '/#about-me'
  },
  {
    title: 'CV',
    label: 'cv',
    url: '/SalvadorJesus_CV.pdf'
  }
  // {
  //   title: 'Contact',
  //   label: 'contact',
  //   url: 'mailto:salvadorjesus.freelance@gmail.com'
  // }
];
---

<header class="mt-4">
  <nav class="flex justify-center">
    <div
      class="fixed top-0 z-50 flex justify-between items-center w-full px-6 py-3 sm:w-11/12 md:w-4/5 lg:w-2/3 bg-light-bg-surface/50 dark:bg-dark-bg-surface/50 backdrop-blur-sm border-b border-light-border-subtle dark:border-dark-border-subtle"
    >
      <div class="flex gap-4 items-center">
        {
          NAV_ITEMS.map(item =>
            item.label === 'cv' ? (
              <a
                href={item.url}
                class="nav-link"
                aria-label={item.label}
                target="_blank"
                rel="noopener noreferrer"
              >
                {item.title}
              </a>
            ) : (
              <a
                href={item.url}
                class="nav-link"
                aria-label={item.label}
              >
                {item.title}
              </a>
            )
          )
        }
      </div>
      <ThemeToggle />
    </div>
  </nav>
</header>

<style>
  .nav-link {
    @apply text-light-text-secondary dark:text-dark-text-secondary hover:text-light-accent-primary dark:hover:text-dark-accent-primary transition-all duration-300 font-medium relative after:content-[''] after:absolute after:w-0 after:h-[2px] after:left-0 after:bottom-0 after:bg-light-accent-primary dark:after:bg-dark-accent-primary after:transition-all after:duration-300 hover:after:w-full text-body-sm;
  }
</style>
